<form action="" method="POST">

  {{#if error}}
    <span class="payment-errors">{{ error }}</span>
  {{/if}}

  <div class="form-row">
    <label>
      <span>Card Number</span>
      {{input size="20" value=number data-stripe="number"}}
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      {{input size="4" value=cvc data-stripe="cvc"}}
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      {{input size="2" value=exp_month data-stripe="exp-month"}}
    </label>
    <span> / </span>
    {{input size="4" value=exp_year data-stripe="exp-year"}}
  </div>

  <button type="submit" {{action 'submit'}} disabled={{ isProcessing }}>Pay</button>

</form>