<section class="state-receipts">

  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Date</th>
        <th>Item</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      {{#each model as |invoice|}}
        <tr>
          <td>{{moment-format invoice.date 'LL'}}</td>
          <td>Fido Subscription</td>
          <td>{{format-currency invoice.total}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <p>*We only show the last 24 months of billing history</p>
  <p>**All refunds may not show up in your purchase history</p>
  <p>***All prices include tax</p>

</section>