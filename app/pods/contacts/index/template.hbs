<article class="page-contacts content-index">

  <header>
    {{link-to 'Create Contact' 'contacts.new' class="btn btn-success pull-right"}}
  </header>

  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Occasions</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      {{#if model.length}}
        {{#each model as |contact|}}
        <tr>
          <td>{{ contact.fullName }}</td>
          <td>{{ contact.occasions.length }}</td>
          <td>
            <ul class="list-horizontal">
              <li>{{link-to 'View' 'contacts.show' contact.id}}</li>
              <li><a href="#" {{action 'destroyContact' contact}}>Delete</a></li>
            </ul>
          </td>
        </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="3" class="no-contacts">
            <div class="alert alert-info text-center" role="alert">
              Looks like you don&#39;t have any contacts.
              Why don&#39;t you {{link-to 'create' 'contacts.new' class="underline"}} one now?
            </div>
          </td>
        </tr>
      {{/if}}
    </tbody>
  </table>

</article>